<%- include('../layouts/adminheader.ejs') %>

<div class="col-md-6 grid-margin stretch-card" style="height: 450px; margin: 15px;">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">Banner</h4>
      <form action="" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label>Header</label>
        <input type="text" class="form-control form-control-lg " name="header" placeholder="Header" required>
      </div>

      <div class="form-group">
        <label>File upload</label>
        <input class="bt" style="height: 28px;width: 228px ; background-color: blue;color: white;" accept="Image/*" type="file" name="image"  multiple required>
        
      </div>

      <div class="form-group">
        <label>Description</label>
        <input type="text" class="form-control form-control-lg " name="description" placeholder="Discription" required >
      </div>

      <div class="btn-bt">
        <input type="submit" value="Submit" class="form-control form-control-lg btn btn-primary me-2">
      </div>
      <%
      if(typeof message != 'undefined'){
        %>
        <p style="color: red;"><%=message%></p>
        <%
      }
      %>
    </form>
    </div>
  </div>
</div>
<%-include ('../layouts/adminfooter.ejs')%>

