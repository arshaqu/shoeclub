<%-include ('../layouts/adminheader.ejs')%>

<div class="col-lg-10 grid-margin stretch-card" >
  <div class="card" >
    <div class="card-body">
      <h4 class="card-title" >Products</h4>
     
      <div class="table-responsive"  style="border-radius: 12px">
        <table class="table table-striped" >
          <thead>
            <tr>
                <th >Coupon Code</th>
                      <th >Discount Amount</th>
                      <th >Expiry Date</th>
                      <th >Max Cart Amount</th>
                      <th >Max discount</th>
                      <th >Limit</th>
                      <th >Status</th>
                      <th >Action</th>
            </tr>
          </thead>
          <tbody>
            <%
                  if(couponData.length>0){
                    for(let i=0;i<couponData.length;i++){
                        %>
                        <tr class="text-gray-700 dark:text-gray-400">
                          <td ><%=couponData[i].code%></td>
                          <td ><%=couponData[i].discountAmount%>(<%=couponData[i].discountType%>)</td>
                          <td ><%=couponData[i].expiryDate.toISOString().substring(0,10)%></td>
                          <td>
                            <%=couponData[i].maxCartAmount%>
                          </td>
                          <td ><%=couponData[i].maxDiscountAmount%></td>
                          <td ><%=couponData[i].maxUsers%></td>
                          <td ><%=couponData[i].status%></td>
                          <td>
                                <a class="btn btn-success" href="/admin/editCoupon?id=<%=couponData[i]._id%>">Edit</a>
                                <a class="btn btn-danger" href="/admin/deleteCoupon?id=<%=couponData[i]._id%>">Delete</a>

                             
                          </td>
                        </tr>
                        <%
                    }
                  }else{
                    %>
                    <p style="color: white;padding: 30px;font-family: Georgia, 'Times New Roman', Times, serif;">Coupon Not Found</p>
                    <%
                  }
                  %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<%-include ('../layouts/adminfooter.ejs')%>
