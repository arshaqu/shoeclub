<%- include('../layouts/adminheader.ejs') %>

<div class="col-md-6 grid-margin stretch-card" style="height: 450px; margin: 15px;">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">Edit Banner</h4>
      <form action="" method="post" enctype="multipart/form-data">
        <input type="hidden" name="_method" value="PUT">
        <input type="hidden" name="id" value="<%= bannerData._id %>">

        <div class="form-group">
          <label for="header">Header</label>
          <input type="text" class="form-control" id="header" name="header" value="<%= bannerData.header %>" placeholder="Enter banner header" required>
        </div>

        <div class="form-group">
          <label for="image">Image</label>
          <input type="file" class="form-control-file" accept="Image/*" id="image" name="image" required>
          <img src="<%= bannerData.image %>" width="100" height="100">
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          <textarea class="form-control" id="description" name="description" rows="3" required><%= bannerData.description %></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Update Banner</button>
      </form>
    </div>
  </div>
</div>

<%- include('../layouts/adminfooter.ejs') %>
