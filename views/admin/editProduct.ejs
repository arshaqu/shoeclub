<%-include ('../layouts/adminheader.ejs')%>
<div class="card-body">
    <h3 class="card-title">Edit Product</h3>

<form action=""method="POST" class="form-group m-2 mt-3" enctype="multipart/form-data">
    <label>PRODUCT</label>
<input type="name"class="form-control form-control-lg" name="product" placeholder="Enter Name" value="<%=product.product %>" required>
<br><br>
<label>STOCK</label>

<input type="text"class="form-control form-control-lg" name="stock" placeholder="Enter stock" value="<%=product.stock %>" required>
<br><br>
<label>PRICE</label>

<input type="text"class="form-control form-control-lg" name="price" placeholder="Enter price" value="<%=product.Price %>"required>
<br><br>

<div class="point col-md-12" style="display: flex;">
    <%
for(let i=0;i<product.image.length;i++){
  %>
    
<div>
    <label for="image">Image</label>
    <img style="width: 150px; height: 150px;margin: 20px;" src="/adminImages/<%=product.image[i]%>" width="100" height="100" >
    <button type="button" class="btn btn-danger" onclick="remove('<%=product._id%>','<%=i%>')" >Remove</button>
</div>
    <%
}
%>
</div>
<input type="file"class="form-control form-control-lg" name="Image" accept="Image/*" placeholder="Enter image path" multiple required>

<br><br>
<label>CATAGORY</label>

<input type="text"class="form-control form-control-lg" name="Category" placeholder="Enter catogery" value="<%=product.Category %>"required>
<br><br>
<label>QUANTITY</label>

<input type="text"class="form-control form-control-lg" name="quantity" placeholder="Enter quantity" value="<%=product.StockQuantity %>"required>
<br><br>
<label>STATUS</label>

<input type="text"class="form-control form-control-lg" name="status" placeholder="Enter status" value="<%=product.Status %>"required>
<br><br>
<label>DISCRIPTION</label>

<input type="text"class="form-control form-control-lg" name="discription" placeholder="Enter discription" value="<%=product.discription %>"required>
<br><br>

<input type="hidden" class="" name="id" value="<%=product._id %>">
<input class="btn btn-block btn-facebook auth-form-btn"  type="submit" value="Update product">

</form>
</div>
<a href="/admin/">Go Dashboard</a>

<script>
      function remove(id,pos){
    console.log(id,pos);
    $.ajax({
      url:"/admin/removeimg",
      data:{
        id:id,
        pos:pos
      },
      method:"post",
      success:(response)=>{
        if(response.success){
          window.location.reload()
        }
      }
    })
  }
</script>

<%-include ('../layouts/adminfooter.ejs')%>