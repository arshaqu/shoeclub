<%-include ('../layouts/adminheader.ejs')%>

<div class="col-lg-10 grid-margin stretch-card" >
  <div class="card" >
    <div class="card-body">
      <h4 class="card-title" >Products</h4>
     
      <div class="table-responsive"  style="border-radius: 12px">
        <table class="table table-striped" >
          <thead>
            <tr>
              <th>
                Product Name
              </th>
              <th>
                Stock
              </th>
              <th>
                Price
              </th>
              <th>
               Category
              </th>
              <th>
                Stock Quantity
              </th>
              <th>
                Description
              </th>
              <th>
                Actions
              </th>
            </tr>
          </thead>
          <tbody>
            <%
                    if(products.length>0){
                      for(let i=0;i<products.length;i++){
                        %>
            <tr>
              <td class="py-1">
                <img src="/adminImages/<%=products[i].image[0]%>" alt="image"/>
              
                <%=products[i].product%>
              </td>
              <td>
                <div class="progress">
                  <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
              </td>
              <td>
                <%=products[i].Price%>
              </td>
              <td>
                <%=products[i].Category%>
              </td>
              <td>
                <%=products[i].StockQuantity%>
              </td>
              <td>
                <%=products[i].discription%>
              </td>
              <td>
                <a class="btn btn-success" href="edit-product?id=<%= products[i]._id %>">
                  Edit
                </a>
                <a class="btn btn-danger" href="delete-product?id=<%= products[i]._id %>">
                  Delete
                </a>
              </td>
            </tr>
            <%
          }
        }
        %>  
         <%
                  if(typeof message !== 'undefined'){
                    %>
                    <p style="color: red;"><%= message %></p>
                    <%
              
                  }
                  %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<%-include ('../layouts/adminfooter.ejs')%>
